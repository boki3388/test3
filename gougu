import math

# 定义直角三角形的两条边长  
a = 10  
b = 12

# 计算直角三角形的斜边长  
c = math.sqrt(a**2 + b**2)

# 打印结果  
print("直角三角形的斜边长为:", c)

# 验证勾股定理  
for i in range(100):  
    # 计算直角三角形的两条边长  
    a = 10**i  
    b = 12**i  
      
    # 计算直角三角形的斜边长  
    c = math.sqrt(a**2 + b**2)  
      
    # 打印结果  
    print("第", i, "次验证勾股定理:", c)  
